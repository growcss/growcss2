{
  "name": "growcss",
  "private": true,
  "license": "MIT",
  "scripts": {
    "bootstrap": "          lerna bootstrap --parallel",
    "build": "              yarn run delete && lerna exec -- sort-package-json && NODE_ENV=production lerna run build --parallel",
    "build:flow": "         lerna exec -- flow-copy-source -v -i '__tests__' src/components dist",
    "changelog": "          lerna-changelog",
    "precommit": "          lint-staged",
    "delete": "             yarn run delete:modules && yarn run delete:build",
    "delete:build": "       lerna exec -- rimraf dist",
    "delete:modules": "     lerna exec -- rimraf node_modules",
    "flow": "               flow check --show-all-errors",
    "flow:watch": "         flow-watch",
    "lint": "               eslint --print-config .eslintrc | eslint-config-prettier-check && eslint 'src/**/**/*.js' && yarn run flow",
    "lint:fix": "           eslint --fix 'src/**/**/*.js'",
    "storybook": "          cross-env NODE_ENV=production start-storybook -p 6006",
    "storybook-build": "    cross-env NODE_ENV=production build-storybook",
    "test": "               cross-env NODE_ENV=test jest",
    "test:ci": "            yarn run test --coverage -- --runInBand",
    "test:coverage": "      yarn run test --coverage",
    "test:watch": "         yarn run test --watch"
  },
  "devDependencies": {
    "@storybook/addon-options": "^3.3.13",
    "@storybook/addon-storyshots": "^3.3.13",
    "@storybook/addons": "^3.3.13",
    "@storybook/react": "^3.3.13",
    "axe-core": "^2.6.1",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-jest": "^22.2.2",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-flow-react-proptypes": "^17.1.2",
    "babel-plugin-polished": "^1.1.0",
    "babel-plugin-styled-components": "^1.5.0",
    "babel-plugin-syntax-decorators": "^6.13.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react-app": "^3.1.1",
    "classnames": "^2.2.5",
    "cross-env": "^5.1.3",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.18.0",
    "eslint-config-airbnb": "16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-compat": "^2.2.0",
    "eslint-plugin-flowtype": "^2.44.0",
    "eslint-plugin-flowtype-errors": "^3.3.7",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.12.2",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prefer-object-spread": "^1.2.1",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.6.1",
    "flow": "^0.2.3",
    "flow-bin": "^0.66.0",
    "flow-copy-source": "^1.3.0",
    "husky": "^0.14.3",
    "istanbul-reports": "^1.1.4",
    "jest": "^22.3.0",
    "jest-axe": "^2.1.2",
    "jest-enzyme": "^4.2.0",
    "jest-styled-components": "^4.11.0-1",
    "jsdom": "^11.6.2",
    "jsdom-global": "^3.0.2",
    "lerna": "^2.9.0",
    "lint-staged": "^6.1.1",
    "polished": "^1.9.2",
    "preact": "^8.2.7",
    "preact-compat": "^3.18.0",
    "prettier": "^1.10.2",
    "prettier-eslint": "^8.8.1",
    "prop-types": "^15.6.0",
    "prop-types-extra": "^1.0.1",
    "react": "^16.2.0",
    "react-deprecate": "^0.1.0",
    "react-dom": "^16.2.0",
    "react-test-renderer": "^16.2.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.56.1",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-commonjs": "^8.3.0",
    "rollup-plugin-json": "^2.3.0",
    "rollup-plugin-node-globals": "^1.1.0",
    "rollup-plugin-node-resolve": "^3.0.3",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-uglify": "^3.0.0",
    "rollup-plugin-visualizer": "^0.3.1",
    "sinon": "^4.3.0",
    "sort-package-json": "^1.7.1",
    "styled-components": "^3.1.6",
    "styled-theming": "^2.2.0"
  },
  "engines": {
    "node": "^9.3.0",
    "npm": "^5",
    "yarn": "^1.3"
  },
  "jest": {
    "setupFiles": [
      "./build/Tests/JsdomSetup.js",
      "./build/Tests/EnzymeSetup.js",
      "./build/Tests/A11ySetup.js"
    ],
    "setupTestFrameworkScriptFile": "./node_modules/jest-enzyme/lib/index.js",
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "globals": {
      "__DEV__": true
    }
  },
  "lint-staged": {
    "src/behaviors/**/src/**/*.{js, jsx}": [
      "prettier --write",
      "git add"
    ],
    "src/elements/**/src/**/*.{js, jsx}": [
      "prettier --write",
      "git add"
    ],
    "src/utils/**/src/**/*.{js, jsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "workspaces": [
    "src/behaviors/*",
    "src/components/*",
    "src/elements/*",
    "src/utils/*"
  ]
}
